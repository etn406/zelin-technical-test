{
  "name": "zelin-technical-test-server",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start:production": "node dist/server.js",
    "build:production": "tsc",
    "prewatch:local": "tsc --project tsconfig.dev.json",
    "watch:local": "concurrently --names tsc,node \"npm run watch:local:build\" \"npm run watch:local:serve\"",
    "watch:local:build": "tsc --project tsconfig.dev.json --watch --preserveWatchOutput",
    "watch:local:serve": "node --inspect=0.0.0.0:9229 --env-file=../.env --watch-path=dist --watch-preserve-output dist/server.js",
    "drizzle-kit": "tsc && node --env-file=../.env node_modules/.bin/drizzle-kit --config=drizzle.config.js"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.0",
    "express": "^5.0.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.5",
    "tsx": "^4.19.3"
  }
}
